{% extends 'layout.html.twig' %}
{% block body %}
    {% embed 'decorator/_card.html.twig' %}
    {% block header %} 
    <h2>{{ entity.title }}</h2>
    {% endblock %}

    {% block body %} 
    {{ entity.content|raw }}
    {% endblock %}

    {% block footer %}  
    <div class="row align-middle">
        <div class="col-md-3"> Rédigé le : {{ entity.dateCreate|date('d/m/Y H:i') }}</div>
        <div class="col-md-8 text-right">{{ 'article.followers'|transchoice(entity.articleFollows|length, {'%count%': entity.articleFollows|length}) }}</div>
        <div class="col-md-1 text-right">{{ form_start(form) }} <button type="submit" class="btn btn-danger"><i class="fa fa-heart" aria-hidden="true"></i></button></div>
    </div>
    {% endblock %}
 {% endembed %}
{% endblock %}