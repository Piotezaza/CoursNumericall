{% extends 'base.html.twig' %}
{% block stylesheets %}
     <link rel="stylesheet" href="{{ asset('build/css/admin.css') }}" />
{% endblock %}

{% block main_content %}
    
    <header class="main-header">
        <div class="logo">
            {{ 'app_title'|trans }}
        </div>
        {% embed 'decorator/_nav.html.twig' with {'class': 'fixed-top navbar-dark bg-dark', 'brandUrl': path('homepage')} %} 
        
            {% block brand %}
            {% endblock %}

            {% block menu %}
            {% endblock %}

        {% endembed %}
    </header>

    <aside class="main-sidebar">
        <section class="sidebar">
            {{ knp_menu_render('admin', {'style': 'vertical-pills'}) }}
        </section>
    </aside>

    {% block body %}
    {% endblock %}
{% endblock %} {# /main_content #}

